<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="420dp"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".farmer.ConfirmOrderMatooke">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/qtynameLayoutName"
        android:layout_width="match_parent"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <EditText
            android:id="@+id/add_delivery_date"
            android:layout_width="200dp"
            android:inputType="text"
            android:layout_height="wrap_content"
            android:hint="@string/enter_delivery_date" />
    </com.google.android.material.textfield.TextInputLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginStart="10dp"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/add_order_p"
            android:onClick="cancel_delivery_order"
            android:text="CANCEL"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginStart="15dp"
            android:onClick="save_delivery_order"
            android:layout_height="wrap_content"
            android:text="ADD"/>
    </LinearLayout>
</LinearLayout>