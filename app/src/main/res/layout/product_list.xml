<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/prdct_list"
        android:layout_margin="10dp"
        android:layout_marginBottom="25dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            tools:ignore="UselessParent">
            <ImageView
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/matook"
                android:id="@+id/pdct_image">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pdct_mater"
                android:textColor="@color/colorAccent"
                android:layout_toRightOf="@+id/pdct_image"
                android:text="Enkota Name:"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:id="@+id/pdct_name"
                android:layout_toRightOf="@+id/pdct_mater"
                android:text="Clay sand"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price:"
                android:textColor="@color/colorAccent"
                android:id="@+id/tit"
                android:layout_marginTop="12dp"
                android:layout_toRightOf="@+id/pdct_image"
                android:layout_below="@+id/pdct_mater"/>
            <TextView
                android:id="@+id/pdct_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="57000"
                android:layout_marginStart="5dp"
                android:maxLength="20"
                android:layout_marginTop="30dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tit"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pdct_price"
                android:layout_toRightOf="@+id/pdct_image"
                android:id="@+id/lov"
                android:layout_marginTop="10dp"
                android:text="Location :"
                android:textColor="@color/colorAccent"/>
            <TextView
                android:id="@+id/pdct_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#000"
                android:maxLength="30"
                android:layout_below="@id/pdct_price"
                android:layout_marginStart="5dp"
                android:layout_toRightOf="@+id/lov"
                android:text="Runkungiri"
                android:layout_marginLeft="5dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:text="Quantity:"
                android:id="@+id/sas"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/pdct_image"
                android:layout_below="@+id/lov"/>
            <TextView
                android:id="@+id/pdt_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#FF5722"
                android:layout_below="@id/pdct_location"
                android:layout_marginStart="5dp"
                android:layout_toRightOf="@+id/sas"
                android:text="3 Bunches"
                android:layout_marginLeft="5dp" />
            <TextView
                android:id="@+id/pdt_typee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#2196F3"
                android:layout_below="@id/pdct_location"
                android:layout_marginStart="8dp"
                android:layout_toRightOf="@+id/pdt_qty"
                android:text="Wet sand"
                android:layout_marginLeft="5dp" />
            <TextView
                android:id="@+id/posted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#FF5722"
                android:layout_below="@id/pdt_qty"
                android:layout_marginStart="5dp"
                android:layout_toRightOf="@+id/pdct_image"
                android:text="Seller:"
                android:layout_marginLeft="5dp" />
            <TextView
                android:id="@+id/pdt_seller_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#2196F3"
                android:layout_below="@id/pdt_qty"
                android:layout_marginStart="5dp"
                android:layout_toRightOf="@+id/posted"
                android:text="Musana"
                android:layout_marginLeft="5dp" />

            <ImageView
                android:id="@+id/share_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="2dp"
                android:visibility="gone"
                android:layout_toRightOf="@+id/pdct_image"
                android:layout_below="@id/posted" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Share"
                android:visibility="gone"
                android:id="@+id/jobshare"
                android:layout_marginTop="10dp"
                android:textSize="10sp"
                android:layout_toRightOf="@id/share_tip"
                android:layout_below="@id/posted"
                android:textColor="@color/colorPrimary"
                android:layout_toEndOf="@id/share_tip"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/jobshare"
                android:id="@+id/jobsaved"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="7dp"
                android:layout_below="@id/posted"
               />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/jobshare"
                android:id="@+id/allocate_on_map"
                style="@style/TextAppearance.AppCompat.Caption"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="97dp"
                android:visibility="gone"
                android:layout_below="@id/posted"
                android:text="Allocate on Map"/>
            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Add to Cart"
                android:background="@color/colorAccent"
                android:id="@+id/order_pdt"
                android:layout_marginBottom="10dp"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="15dp"

                android:layout_below="@+id/allocate_on_map"/>
            <Button
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:text="Contact Farmer"
                android:background="@color/colorAccent"
                android:id="@+id/contact_seller"
                android:layout_marginBottom="10dp"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:layout_toRightOf="@+id/order_pdt"
                android:layout_below="@+id/allocate_on_map"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>